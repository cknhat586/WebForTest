<div id="addHospitalForm" class="card mx-auto" style="margin-top: 20px;">
    <div class="card-header text-center text-light bg-primary fs-5">ADD HOSPITAL</div>
    <div class="card-body">
        <form class="row g-2" method="post">
            <div class="col-12 mt-1">
                <label class="form-label">Tên:</label>
                <input name="name" type="text" class="form-control" placeholder="Tên nơi điều trị">
            </div>
            <div class="col-12 mt-1">
                <label class="form-label">Địa chỉ:</label>
                <input name="address" type="text" class="form-control" placeholder="Địa chỉ">
            </div>
            <div class="col-12 mt-1">
                <label class="form-label">Tỉnh, thành:</label>
                {{#if provinceList}}
                    <select name="province" id="selectProvince" class="form-select">
                        <option selected value='{{firstProvince}}'>{{firstProvince}}</option>
                    {{#each provinceList}}
                        <option value='{{this}}'>{{this}}</option>
                    {{/each}}
                    </select>
                {{else}}
                    <select id="selectProvince" class="form-select">
                    <option selected>Open this select menu</option>
                    <option value="1">One</option>
                    <option value="2">Two</option>
                    <option value="3">Three</option>
                </select>
                {{/if}}
            </div>
            <div class="col-12 mt-1">
                <label class="form-label">Quận, huyện:</label>
                {{#if districtList}}
                    <select name="district" id="selectDistrict" class="form-select">
                        <option selected value='{{firstDistrict}}'>{{firstDistrict}}</option>
                    {{#each districtList}}
                        <option value='{{this}}'>{{this}}</option>
                    {{/each}}
                    </select>
                {{else}}
                    <select id="selectDistrict" class="form-select">
                    <option selected>Open this select menu</option>
                    <option value="1">One</option>
                    <option value="2">Two</option>
                    <option value="3">Three</option>
                </select>
                {{/if}}
            </div>
            <div class="col-12 mt-1">
                <label class="form-label">Phường, xã:</label>
                {{#if wardList}}
                    <select name="ward" id="selectWard" class="form-select">
                        <option selected value='{{firstWard}}'>{{firstWard}}</option>
                    {{#each wardList}}
                        <option value='{{this}}'>{{this}}</option>
                    {{/each}}
                    </select>
                {{else}}
                    <select id="selectWard" class="form-select">
                    <option selected>Open this select menu</option>
                    <option value="1">One</option>
                    <option value="2">Two</option>
                    <option value="3">Three</option>
                </select>
                {{/if}}
            </div>
            <div class="d-flex col-12 justify-content-between">
                <div class="col-5">
                    <label class="form-label">Hiện tại:</label>
                    <input name="current" type="number" class="form-control" placeholder="Hiện tại">
                </div>
                <div class="col-2 text-center fs-3 align-self-end text-muted">/</div>
                <div class="col-5">
                    <label class="form-label">Sức chứa:</label>
                    <input name="max" type="number" class="form-control" placeholder="Sức chứa">
                </div>
            </div>
            <div class="col-12 mx-auto text-center mt-4">
                <button type="submit" class="btn btn-primary me-2">Confirm</button>
                <a class="btn btn-danger" href="/admin/hospitalList">Cancel</a>
            </div>
        </form>
    </div>
</div>