<table id="managerListTable" class="table table-striped table-bordered caption-top align-middle mx-auto">
    <caption>
        <div class="d-flex justify-content-between align-items-center">
            <a><b>Managers List</b></a>
            <a class="btn btn-warning me-2" style="font-weight: 550;" href="/admin/addManager">
                <svg class="bi" width="24" height="24"><use xlink:href="#person-plus"/></svg>
                New Manager
            </a>
        </div>
    </caption>
    <thead>
        <tr class="bg-info text-center">
            <th scope="col" class="col-1">ID</th>
            <th scope="col" class="col-3">Username</th>
            <th scope="col" class="col-5">Fullname</th>
            <th scope="col" class="col-2">Action</th>
        </tr>
    </thead>
    {{#if list}}
    <tbody>
        {{#each list}}
        <tr>
            <th scope="row" class="text-center">{{this.f_ID}}</th>
            <td>{{this.f_Username}}</td>
            <td>{{this.f_Fullname}}</td>
            <td class="text-center">
                {{#isEqual this.f_isLocked false}}
                <a class="btn" href="/admin/managerList?username={{this.f_Username}}&command=lock">
                    <svg class="bi" width="24" height="24"><use xlink:href="#unlock"/></svg>
                </a>
                {{else}}
                <a class="btn" href="/admin/managerList?username={{this.f_Username}}&command=unlock">
                    <svg class="bi" width="24" height="24"><use xlink:href="#lock"/></svg>
                </a>
                {{/isEqual}}
                <a class="btn" href="/admin/managerHistory?username={{this.f_Username}}">
                    <svg class="bi" width="24" height="24"><use xlink:href="#history"/></svg>
                </a>
            </td>
        </tr>
        {{/each}}
    </tbody>
    {{/if}}
</table>
<div class="text-center">
    <a class="btn btn-primary" style="font-weight: 550;" href="/admin">BACK</a>
</div>