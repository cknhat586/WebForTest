<table id="hospitalListTable" class="table table-striped table-bordered caption-top align-middle mx-auto">
    <caption>
        <div class="d-flex justify-content-between align-items-center">
            <a><b>Hospitals Lists</b></a>
            <a class="btn btn-warning me-2" style="font-weight: 550;" href="/admin/addHospital">
                <svg class="bi" width="24" height="24"><use xlink:href="#plus-circle"/></svg>
                New Hospital
            </a>
        </div>
    </caption>
    <thead>
        <tr class="bg-info text-center">
            <th scope="col" class="col-1">ID</th>
            <th scope="col" class="col-3">Name</th>
            <th scope="col" class="col-5">Address</th>
            <th scope="col" class="col-1">Current</th>
            <th scope="col" class="col-1">Max</th>
            <th scope="col" class="col-1">Action</th>
        </tr>
    </thead>
    {{#if list}}
    <tbody>
        {{#each list}}
        <tr>
            <th scope="row" class="text-center">{{this.f_ID}}</th>
            <td>{{this.f_Name}}</td>
            <td>{{this.f_Address}}</td>
            <td class="text-center">{{this.f_Current}}</td>
            <td class="text-center">{{this.f_Max}}</td>
            <td class="text-center">
                <a class="btn" href="/admin/editHospital?name={{this.f_Name}}">
                    <svg class="bi" width="24" height="24"><use xlink:href="#pencil-square"/></svg>
                </a>
            </td>
        </tr>
        {{/each}}
    </tbody>
    {{/if}}
</table>
<div class="text-center">
    <a class="btn btn-primary" style="font-weight: 550;" href="/admin">BACK</a>
</div>
