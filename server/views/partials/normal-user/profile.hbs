<div class="profile">

    <div class="mb-3 row">
        <label class="col-sm-3 col-form-label">Full name</label>
        <label class="col-sm-9 col-form-label">{{info.name}}</label>
    </div>
    <div class="mb-3 row">
        <label class="col-sm-3 col-form-label">ID</label>
        <label class="col-sm-9 col-form-label">{{info.id}}</label>
    </div>
    <div class="mb-3 row">
        <label class="col-sm-3 col-form-label">Birthday</label>
        <label class="col-sm-9 col-form-label">{{info.date_birth}}</label>
    </div>
    <div class="mb-3 row">
        <label class="col-sm-3 col-form-label">Email</label>
        <label class="col-sm-9 col-form-label">{{info.email}}</label>
    </div>
    <div class="mb-3 row">
        <label class="col-sm-3 col-form-label">Phone</label>
        <label class="col-sm-9 col-form-label">{{info.phone}}</label>
    </div>

    <div class="mb-3 row">
        <label class="col-sm-3 col-form-label">Address</label>
        <label class="col-sm-9 col-form-label">{{info.address}}</label>
    </div>

    <div class="mb-3 input-group">
        <label for="inputPassword" class="col-sm-3 col-form-label">Password</label>
        <input readonly type="password" class="form-control" value="password" style="max-width: 400px">
        <a class="btn btn-primary" data-bs-toggle="modal" href="#exampleModalToggle" role="button">Change</a>

        <div class="modal fade" id="exampleModalToggle" aria-hidden="true" aria-labelledby="exampleModalToggleLabel"
            tabindex="-1">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalToggleLabel">Edit</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="mb-3 row">
                            <label for="inputOldPassword" class="col-sm-4 col-form-label">Old password</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="inputOldPassword" />
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <label for="inputNewPassword" class="col-sm-4 col-form-label">New password</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="inputNewPassword" />
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <label for="inputconfirmPassword" class="col-sm-4 col-form-label">Confirm
                                password</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="inputconfirmPassword" />
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-success" data-bs-toggle="modal">OK</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>