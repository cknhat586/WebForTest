<div class="profile">

    <div class="mb-3 row">
        <label class="col-sm-3 col-form-label">Full name</label>
        <label class="col-sm-9 col-form-label">{{info.f_Fullname}}</label>
    </div>
    <div class="mb-3 row">
        <label class="col-sm-3 col-form-label">ID</label>
        <label class="col-sm-9 col-form-label">{{info.f_CMND}}</label>
    </div>
    <div class="mb-3 row">
        <label class="col-sm-3 col-form-label">Birthday</label>
        <label class="col-sm-9 col-form-label">{{info.f_YOB}}</label>
    </div>
    <div class="mb-3 row">
        <label class="col-sm-3 col-form-label">Phone</label>
        <label class="col-sm-9 col-form-label">{{info.f_SDT}}</label>
    </div>

    <div class="mb-3 row">
        <label class="col-sm-3 col-form-label">Address</label>
        <label class="col-sm-9 col-form-label">{{info.f_Address}}</label>
    </div>

    <div class="mb-3 row">
        <label class="col-sm-3 col-form-label">Hospital</label>
        <label class="col-sm-9 col-form-label">{{info.f_Hospital}}</label>
    </div>

    <div class="mb-3 input-group">
        <label for="inputPassword" class="col-sm-3 col-form-label">Password</label>
        <input readonly type="password" class="form-control" value="password" style="max-width: 400px">
        <a class="btn btn-primary" data-bs-toggle="modal" href="#exampleModalToggle" role="button">Change</a>

        <div class="modal fade" id="exampleModalToggle" aria-hidden="true" aria-labelledby="exampleModalToggleLabel"
            tabindex="-1">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalToggleLabel">Edit</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <form action="/changePassword" method="post">
                        <div class="modal-body">

                            <div class="mb-3 row">
                                <label for="inputOldPassword" class="col-sm-4 col-form-label">Old password</label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" id="inputOldPassword" name="old_password" />
                                </div>
                            </div>
                            <div class="mb-3 row">
                                <label for="inputNewPassword" class="col-sm-4 col-form-label" name="new_password">New
                                    password</label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" id="inputNewPassword" />
                                </div>
                            </div>
                            <div class="mb-3 row">
                                <label for="inputconfirmPassword" class="col-sm-4 col-form-label">Confirm
                                    password</label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" id="inputconfirmPassword"
                                        name="confirm_password" />
                                </div>

                                {{#if success}}
                                <div class="alert alert-success" role="alert">
                                    Change success
                                </div>
                                {{/if}}
                                {{#if fail}}
                                <div class="alert alert-danger" role="alert">
                                    Change fail!
                                </div>
                                {{/if}}
                            </div>


                        </div>
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-success" data-bs-toggle="modal">OK</button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>

</div>