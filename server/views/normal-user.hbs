<div class="normal-user mb-5">
    <div class="title position-relative">
        <div class="noti  position-absolute top-0 end-0 mt-2">
            <button type="button" class="btn btn-outline-danger" id="dropdownMenuButton2" data-bs-toggle="dropdown"
                aria-expanded="false">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-bell"
                    viewBox="0 0 16 16">
                    <path
                        d="M8 16a2 2 0 0 0 2-2H6a2 2 0 0 0 2 2zM8 1.918l-.797.161A4.002 4.002 0 0 0 4 6c0 .628-.134 2.197-.459 3.742-.16.767-.376 1.566-.663 2.258h10.244c-.287-.692-.502-1.49-.663-2.258C12.134 8.197 12 6.628 12 6a4.002 4.002 0 0 0-3.203-3.92L8 1.917zM14.22 12c.223.447.481.801.78 1H1c.299-.199.557-.553.78-1C2.68 10.2 3 6.88 3 6c0-2.42 1.72-4.44 4.005-4.901a1 1 0 1 1 1.99 0A5.002 5.002 0 0 1 13 6c0 .88.32 4.2 1.22 6z">
                    </path>
                </svg>
                {{noti.length}}
            </button>
            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton2">
                {{#each noti}}
                <li>
                    <div class="card">
                        <div class="card-body">
                            <div class="fw-bold">{{this.title}}</div>
                            <a href="/payment">
                                <p class="card-text">{{this.msg}}</p>
                            </a>
                        </div>
                    </div>
                </li>
                {{/each}}
            </ul>
        </div>

        <div>
            <h1> {{info.f_Fullname}}</h1>
        </div>
        <div class="alert alert-{{#if info.f_State}}warning{{else}}danger{{/if}}" role="alert">
            F{{info.f_State}}
        </div>

    </div>
    <div class="d-flex align-items-start">
        <nav class="sidebar">
            <div class="nav nav-tabs flex-column me-3" id="nav-tab" role="tablist">
                <a class="nav-link{{#ifCond sideIndex '==' 0}} active{{/ifCond}}" href="/profile">Profile</a>
                <a class="nav-link{{#ifCond sideIndex '==' 1}} active{{/ifCond}}" href="/history">History</a>
                <a class="nav-link{{#ifCond sideIndex '==' 2}} active{{/ifCond}}" href="/necessities">Necessities</a>
                <a class="nav-link{{#ifCond sideIndex '==' 3}} active{{/ifCond}}" href="/payment">Payment</a>
            </div>
        </nav>
        <div class="tab-content" style="width: 100%;">
            {{#ifCond sideIndex '==' 0}}{{>normal-user/profile}}{{/ifCond}}
            {{#ifCond sideIndex '==' 1}} {{>normal-user/history}}{{/ifCond}}
            {{#ifCond sideIndex '==' 2}}
            {{#if product}}
            {{>normal-user/combo}}
            {{else}}
            {{>normal-user/necessities}}
            {{/if}}
            {{/ifCond}}
            {{#ifCond sideIndex '==' 3}}{{>normal-user/payment}}{{/ifCond}}
        </div>
    </div>
    <style>
        .normal-user .title {
            text-align: center;
        }

        .normal-user .sidebar .nav-tabs {
            border-bottom: 1px solid transparent;
            border-right: 1px solid #dee2e6;
        }

        .normal-user .sidebar .nav-tabs .nav-link {
            color: #495057;
            margin-bottom: 0px;
            margin-right: -1px;
            border-top-right-radius: 0;
            border-bottom-left-radius: 0.25rem;
        }

        .normal-user .sidebar .nav-tabs .nav-link.active {
            border-color: #dee2e6 #fff #dee2e6 #dee2e6;
        }

        .normal-user .nav-tabs .nav-link.active {
            color: #0d6efd;
        }

        .normal-user .nav-tabs .nav-link {
            color: #495057;
        }
    </style>
</div>