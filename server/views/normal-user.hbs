<div class="normal-user mb-5">
    <div class="title">
        <div class="noti  float-end mt-2">
            <button type="button" class="btn btn-outline-danger" id="dropdownMenuButton2" data-bs-toggle="dropdown"
                aria-expanded="false">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-bell"
                    viewBox="0 0 16 16">
                    <path
                        d="M8 16a2 2 0 0 0 2-2H6a2 2 0 0 0 2 2zM8 1.918l-.797.161A4.002 4.002 0 0 0 4 6c0 .628-.134 2.197-.459 3.742-.16.767-.376 1.566-.663 2.258h10.244c-.287-.692-.502-1.49-.663-2.258C12.134 8.197 12 6.628 12 6a4.002 4.002 0 0 0-3.203-3.92L8 1.917zM14.22 12c.223.447.481.801.78 1H1c.299-.199.557-.553.78-1C2.68 10.2 3 6.88 3 6c0-2.42 1.72-4.44 4.005-4.901a1 1 0 1 1 1.99 0A5.002 5.002 0 0 1 13 6c0 .88.32 4.2 1.22 6z">
                    </path>
                </svg>
                {{noti.length}}
            </button>
            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton2">
                {{#each noti}}
                <li>
                    <div class="card">
                        <div class="card-body">
                            <div class="fw-bold">{{this.title}}</div>
                            <p class="card-text">{{this.msg}}</p>
                        </div>
                    </div>
                </li>
                {{/each}}
            </ul>
        </div>
        <h1>{{info.name}}</h1>


        <div class="alert alert-{{info.status.class}}" role="alert">
            {{info.status.name}}
        </div>

    </div>
    <div class="d-flex align-items-start">
        <nav>
            <div class="nav nav-tabs flex-column me-3" id="nav-tab" role="tablist">
                <button class="nav-link active" id="nav-profile-tab" data-bs-toggle="tab" data-bs-target="#nav-profile"
                    type="button" role="tab" aria-controls="nav-profile" aria-selected="true">Infomation</button>

                <button class="nav-link" id="nav-history-tab" data-bs-toggle="tab" data-bs-target="#nav-history"
                    type="button" role="tab" aria-controls="nav-history" aria-selected="false">History</button>

                <button class="nav-link" id="nav-necessities-tab" data-bs-toggle="tab" data-bs-target="#nav-necessities"
                    type="button" role="tab" aria-controls="nav-necessities" aria-selected="false">Necessities</button>

                <button class="nav-link" id="nav-payment-tab" data-bs-toggle="tab" data-bs-target="#nav-payment"
                    type="button" role="tab" aria-controls="nav-payment" aria-selected="false">Payment</button>

            </div>
        </nav>
        <div class="tab-content px-5" id="nav-tabContent" style="width: 100%;">
            <div class="tab-pane fade show active" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab">
                {{>normal-user/profile}}
            </div>

            <div class="tab-pane fade" id="nav-history" role="tabpanel" aria-labelledby="nav-history-tab">
                {{>normal-user/history}}</div>

            <div class="tab-pane fade" id="nav-payment" role="tabpanel" aria-labelledby="nav-payment-tab">
                {{>normal-user/payment}}</div>

            <div class="tab-pane fade" id="nav-necessities" role="tabpanel" aria-labelledby="nav-necessities-tab">
                {{>normal-user/necessities}}</div>
        </div>
    </div>
    <style>
        .normal-user .title {
            text-align: center;
        }

        .normal-user .nav-tabs {
            border-bottom: 1px solid transparent;
            border-right: 1px solid #dee2e6;
        }

        .normal-user .nav-tabs .nav-link {
            color: #495057;
            margin-bottom: 0px;
            margin-right: -1px;
            border-top-right-radius: 0;
            border-bottom-left-radius: 0.25rem;
        }

        .normal-user .nav-tabs .nav-link.active {
            border-color: #dee2e6 #fff #dee2e6 #dee2e6;
            color: #0d6efd;
        }
    </style>
</div>